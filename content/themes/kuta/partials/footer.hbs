<aside id="footer-outer" class="footer-outer">
	{{^if post}}
		{{{pagination}}}
	{{/if}}

	{{! Tags}}
	<div class="footer-tags">
		{{#get "tags" limit="all" include="count.posts" order="count.posts desc"}}
			<ul class="wrapper-s">
				{{#foreach tags}}
					<li><a href="/tag/{{slug}}">{{name}} <small>{{count.posts}}</small></a></li>
				{{/foreach}}
			</ul>
		{{/get}}
	</div>
</aside>

{{! Credit}}
<footer id="footer-credit" class="clearfix footer-credit" role="contentinfo" itemscope itemtype="http://schema.org/WPFooter">
	<div class="left cr-copyright">&copy; Copyright 2016, <a href="{{@blog.url}}">{{@blog.title}}</a> &mdash; All Rights Reserved.</div>
	<div class="right cr-attribution">Design by <a href="http://heybi.com">Heybi</a>, blog at <a href="http://Ghost.org">Ghost</a></div>
	<div class="back-to-top"><a class="label" href="#">Top</a></div>
</footer>